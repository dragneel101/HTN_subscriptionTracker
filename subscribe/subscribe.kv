Screen:

    MDCard:
        size_hint:None,None
        size: 300, 400
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation:10
        padding:25
        spacing:25
        orientation:'vertical'

        MDLabel:
            id: subscribe_label
            text: "SUBSCRIPTION"
            font_size:40
            halign:'center'
            size_hint_y:None
            height: self.texture_size[1]
            padding_y:15

        MDTextFieldRound:
            id:user
            hint_text: "username"
            icon_right:"account"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{"center_x":0.5}
        MDTextFieldRound:
            id:subscription
            hint_text: "subscription name"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{"center_x":0.5}
        MDTextFieldRound:
            id:duedate
            hint_text: "date(YYYYMMDD)"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{"center_x":0.5}

        MDRoundFlatButton:
            text:"SUBSCRIBE"
            font_size:12
            pos_hint:{"center_x":0.5}
            on_press:app.verify()

        MDRoundFlatButton:
            text:"CANCEL"
            font_size:12
            pos_hint:{"center_x":0.5}
            on_press: app.clear()

        Widget:
            size_hint_y:None
            height:"10dp"


